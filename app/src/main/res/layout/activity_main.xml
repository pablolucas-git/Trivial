<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ocio"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:padding="0dp"
        android:text="@string/str_ocio"
        app:backgroundTint="@color/color_ocio"
        app:layout_constraintBottom_toTopOf="@+id/btn_historia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_ciencia"
        app:layout_constraintTop_toBottomOf="@+id/btn_deportes" />

    <Button
        android:id="@+id/btn_historia"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:padding="0dp"
        android:text="@string/str_historia"
        app:backgroundTint="@color/color_historia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ocio" />

    <Button
        android:id="@+id/btn_ciencia"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:text="@string/str_ciencia"
        app:backgroundTint="@color/color_ciencia"
        app:layout_constraintBottom_toTopOf="@+id/btn_historia"
        app:layout_constraintEnd_toStartOf="@+id/btn_ocio"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_deportes"
        app:layout_constraintVertical_bias="0.497" />

    <Button
        android:id="@+id/btn_deportes"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:padding="0dp"
        android:text="@string/str_deportes"
        app:backgroundTint="@color/color_deportes"
        app:layout_constraintBottom_toTopOf="@+id/btn_ocio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>